<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.pucci.mercadinho">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="tech.pucci.mercadinho.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tech.pucci.mercadinho.activities.CompraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="tech.pucci.mercadinho.activities.ListaActivity" />
        <activity android:name="tech.pucci.mercadinho.activities.LoginActivity" />
        <activity android:name="tech.pucci.mercadinho.activities.BuscaProdutosActivity" />
        <activity android:name="tech.pucci.mercadinho.activities.CadastroActivity" />
        <activity android:name="tech.pucci.mercadinho.activities.ConferenciaActivity"/>
    </application>

</manifest>